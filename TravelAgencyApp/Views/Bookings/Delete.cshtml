@model TravelAgencyApp.DTOs.BookingDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Trip</dt>
        <dd class="col-sm-10">@Model.TripName</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.BookingId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger mt-2" /> |
        <button class="btn btn-secondary mt-2" asp-action="Index" class="btn btn-secondary">Back to List</button>
    </form>
</div>

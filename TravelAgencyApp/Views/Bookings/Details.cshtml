@model TravelAgencyApp.DTOs.BookingDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>

        <dt class="col-sm-2">
            Trip
        </dt>
        <dd class="col-sm-10">
            @Model.TripName
        </dd>

        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
